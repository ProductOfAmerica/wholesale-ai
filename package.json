{
  "name": "wholesale-ai-negotiation-copilot",
  "version": "0.1.0",
  "description": "Real-time AI negotiation copilot for real estate wholesalers",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:tunnel": "npx tsx scripts/dev-tunnel.ts",
    "dev:web": "turbo run dev --filter=@wholesale-ai/web",
    "dev:server": "turbo run dev --filter=@wholesale-ai/server",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
