{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["ANTHROPIC_API_KEY", "DEEPGRAM_API_KEY", "FRONTEND_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "@wholesale-ai/web#build": {
      "dependsOn": ["^build"],
      "env": ["ANTHROPIC_API_KEY", "DEEPGRAM_API_KEY", "FRONTEND_URL"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@wholesale-ai/server#build": {
      "dependsOn": ["^build"],
      "env": ["ANTHROPIC_API_KEY", "DEEPGRAM_API_KEY", "FRONTEND_URL", "PORT"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "dev:server": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.{ts,tsx,js,jsx}"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{ts,tsx}"]
    },
    "clean": {
      "cache": false
    },
    "//#format-and-lint": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}