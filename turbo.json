{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "@wholesale-ai/web#build": {
      "dependsOn": ["^build"],
      "env": ["DEEPGRAM_API_KEY", "NEXT_PUBLIC_SOCKET_URL"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production", 
        ".env"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@wholesale-ai/server#build": {
      "dependsOn": ["^build"],
      "env": ["ANTHROPIC_API_KEY", "DEEPGRAM_API_KEY", "FRONTEND_URL", "PORT"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local", 
        ".env.production",
        ".env"
      ],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@wholesale-ai/web#dev": {
      "cache": false,
      "persistent": true,
      "env": ["DEEPGRAM_API_KEY", "NEXT_PUBLIC_SOCKET_URL"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "@wholesale-ai/server#dev": {
      "cache": false, 
      "persistent": true,
      "env": ["ANTHROPIC_API_KEY", "DEEPGRAM_API_KEY", "FRONTEND_URL", "PORT"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development", 
        ".env"
      ]
    },
    "check": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.{ts,tsx,js,jsx}"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.{ts,tsx}"]
    },
    "clean": {
      "cache": false
    },
    "//#format-and-lint": {
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}