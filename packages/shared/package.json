{
  "name": "@wholesale-ai/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for wholesale AI negotiation copilot",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "lint": "biome check src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@wholesale-ai/typescript-config": "workspace:*",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "zod": "^4.3.4"
  }
}
