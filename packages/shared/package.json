{
  "name": "@wholesale-ai/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for wholesale AI negotiation copilot",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./lib": "./src/lib/index.ts"
  },
  "scripts": {
